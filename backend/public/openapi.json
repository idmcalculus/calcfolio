{
    "openapi": "3.0.0",
    "info": {
        "title": "Portfolio Contact API",
        "description": "API for managing contact form submissions and admin dashboard",
        "contact": {
            "name": "Damilola Michael Ige",
            "email": "idm.calculus@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Development server"
        },
        {
            "url": "https://api.calcfolio.com",
            "description": "Production server"
        }
    ],
    "paths": {
        "/admin/messages": {
            "get": {
                "tags": [
                    "Admin Messages"
                ],
                "summary": "Get paginated messages",
                "operationId": "5caefa38b9133b6b16d90034585b87fc",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "maximum": 1000,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "created_at",
                                "name",
                                "email",
                                "subject",
                                "is_read"
                            ]
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    },
                    {
                        "name": "is_read",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "0",
                                "1"
                            ]
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Messages retrieved successfully"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "sessionAuth": []
                    }
                ]
            }
        },
        "/admin/messages/{id}": {
            "get": {
                "tags": [
                    "Admin Messages"
                ],
                "summary": "Get single message",
                "operationId": "dabe6a124b4b833add9fb34eb8ca3128",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message retrieved successfully"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Message not found"
                    }
                },
                "security": [
                    {
                        "sessionAuth": []
                    }
                ]
            }
        },
        "/admin/bulk/messages": {
            "patch": {
                "tags": [
                    "Admin Messages"
                ],
                "summary": "Bulk message actions",
                "operationId": "3326cd916a9a97d785cf57b73d909794",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "action",
                                    "ids"
                                ],
                                "properties": {
                                    "action": {
                                        "type": "string",
                                        "enum": [
                                            "mark_read",
                                            "mark_unread",
                                            "delete"
                                        ]
                                    },
                                    "ids": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Bulk action completed"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Invalid request"
                    }
                },
                "security": [
                    {
                        "sessionAuth": []
                    }
                ]
            }
        },
        "/admin/messages/stats": {
            "get": {
                "tags": [
                    "Admin Messages"
                ],
                "summary": "Get message statistics",
                "operationId": "42d682dcb8c37838bef55ff593fc9850",
                "responses": {
                    "200": {
                        "description": "Statistics retrieved"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                },
                "security": [
                    {
                        "sessionAuth": []
                    }
                ]
            }
        },
        "/contact": {
            "post": {
                "tags": [
                    "Contact"
                ],
                "summary": "Submit contact form",
                "operationId": "d05079d5910730e0070aef838a3fcb67",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "subject",
                                    "message",
                                    "recaptcha_token"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 100
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "subject": {
                                        "type": "string",
                                        "maxLength": 200
                                    },
                                    "message": {
                                        "type": "string",
                                        "maxLength": 5000
                                    },
                                    "recaptcha_token": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Message sent successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "message_id": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/message/{messageId}": {
            "get": {
                "tags": [
                    "Contact"
                ],
                "summary": "Get message status",
                "operationId": "31d62767ff065c8da317ffc9bdd8b96a",
                "parameters": [
                    {
                        "name": "messageId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message status retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message_id": {
                                            "type": "string"
                                        },
                                        "status": {
                                            "type": "string"
                                        },
                                        "is_read": {
                                            "type": "boolean"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Message not found"
                    }
                }
            }
        },
        "/admin/login": {
            "post": {
                "tags": [
                    "Admin Authentication"
                ],
                "summary": "Admin login",
                "description": "Admin login",
                "operationId": "627445faea44ad5c22cd0ca38aa0cfc7",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    },
                    "400": {
                        "description": "Validation error"
                    }
                }
            }
        },
        "/admin/logout": {
            "post": {
                "tags": [
                    "Admin Authentication"
                ],
                "summary": "Admin logout",
                "description": "Admin logout",
                "operationId": "d6fcd639f6b046ff94125a99fabbf688",
                "responses": {
                    "200": {
                        "description": "Logout successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Not authenticated"
                    }
                },
                "security": [
                    {
                        "sessionAuth": []
                    }
                ]
            }
        },
        "/admin/check": {
            "get": {
                "tags": [
                    "Admin Authentication"
                ],
                "summary": "Check authentication status",
                "description": "Check authentication status",
                "operationId": "1e3ee8f492a52a70d1de475f46f913c9",
                "responses": {
                    "200": {
                        "description": "Authentication status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "authenticated": {
                                            "type": "boolean"
                                        },
                                        "session_id": {
                                            "type": "string"
                                        },
                                        "last_activity": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/admin/recover-session": {
            "post": {
                "tags": [
                    "Admin Authentication"
                ],
                "summary": "Recover session after resource issues",
                "description": "Recover session after resource exhaustion",
                "operationId": "556f1a1bdfead9bf7dbb9c7f388d7111",
                "responses": {
                    "200": {
                        "description": "Session recovery status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "recovered": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/resend-webhook": {
            "post": {
                "tags": [
                    "Webhook"
                ],
                "summary": "Handle Resend webhook events",
                "operationId": "623f81fa9a016b263545af48c69f9dc6",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "type": {
                                        "type": "string",
                                        "example": "email.delivered"
                                    },
                                    "data": {
                                        "type": "object"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Webhook processed successfully"
                    },
                    "401": {
                        "description": "Invalid webhook signature"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Error": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "message": {
                        "type": "string"
                    },
                    "errors": {
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "Message": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "subject": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "message_id": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "pending",
                            "delivered",
                            "bounced",
                            "opened",
                            "clicked",
                            "complained"
                        ]
                    },
                    "is_read": {
                        "type": "boolean"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Pagination": {
                "properties": {
                    "total": {
                        "type": "integer"
                    },
                    "per_page": {
                        "type": "integer"
                    },
                    "current_page": {
                        "type": "integer"
                    },
                    "last_page": {
                        "type": "integer"
                    },
                    "from": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sessionAuth": {
                "type": "apiKey",
                "description": "Session-based authentication for admin endpoints",
                "name": "PHPSESSID",
                "in": "cookie"
            }
        }
    },
    "tags": [
        {
            "name": "Admin Messages",
            "description": "Admin Messages"
        },
        {
            "name": "Contact",
            "description": "Contact"
        },
        {
            "name": "Admin Authentication",
            "description": "Admin Authentication"
        },
        {
            "name": "Webhook",
            "description": "Webhook"
        }
    ]
}